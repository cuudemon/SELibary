<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_marginLeft="@dimen/margin"
            android:layout_weight="0.1"
            android:textSize="@dimen/text_feedback_size"
            android:gravity="center|start"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="@string/text_feedback"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/margin" />
        <ImageView
            android:layout_marginRight="@dimen/margin"
            android:gravity="center"
            android:src="@drawable/ic_close"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginEnd="@dimen/margin" />
    </LinearLayout>
    <LinearLayout
        android:weightSum="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_marginTop="@dimen/margin"
            android:layout_marginBottom="@dimen/margin"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:background="@drawable/frame"
            android:id="@+id/edtdata"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/text_input_feedback"
            android:textColorHint="#746363"
            android:lines="6"/>
        <LinearLayout
            android:weightSum="1"
            android:orientation="horizontal"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_weight="0.5"
                android:layout_marginBottom="@dimen/margin"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:background="@drawable/frame"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/name_uses"
                android:textColorHint="#746363"
                android:lines="1"/>

            <LinearLayout
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_marginBottom="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:background="@drawable/frame"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/text_email"
                    android:textColorHint="#746363"
                    android:lines="1"
                    android:layout_marginEnd="@dimen/margin" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="@dimen/margin"
            android:textStyle="bold"
            android:textSize="@dimen/text_se_size"
            android:text="@string/text_satisfaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin" />
        <LinearLayout
            android:layout_marginTop="@dimen/margin"
            android:layout_marginBottom="@dimen/margin"
            android:layout_marginLeft="@dimen/margin"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin">
            <ImageView
                android:layout_marginRight="@dimen/margin"
                android:layout_width="@dimen/image_emoji_width"
                android:layout_height="@dimen/image_emoji_height"
                android:src="@drawable/imgphanno"
                android:layout_marginEnd="@dimen/margin" />
            <ImageView
                android:layout_marginRight="@dimen/margin"
                android:layout_width="@dimen/image_emoji_width"
                android:layout_height="@dimen/image_emoji_height"
                android:src="@drawable/imgkhonghailong"
                android:layout_marginEnd="@dimen/margin" />
            <ImageView
                android:layout_marginRight="@dimen/margin"
                android:layout_width="@dimen/image_emoji_width"
                android:layout_height="@dimen/image_emoji_height"
                android:src="@drawable/imgbinhthuong"
                android:layout_marginEnd="@dimen/margin" />
            <ImageView
                android:layout_marginRight="@dimen/margin"
                android:layout_width="@dimen/image_emoji_width"
                android:layout_height="@dimen/image_emoji_height"
                android:src="@drawable/imghailong"
                android:layout_marginEnd="@dimen/margin" />
            <ImageView
                android:layout_width="@dimen/image_emoji_width"
                android:layout_height="@dimen/image_emoji_height"
                android:src="@drawable/imgtuyetvoi"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="@dimen/margin"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_weight="0.1"
            android:layout_marginLeft="@dimen/margin"
            android:textSize="@dimen/text_se_size"
            android:gravity="center|start"
            android:text="@string/name_se"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/margin" />
        <ImageButton
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/margin"
            android:id="@+id/btnsend"
            android:layout_width="90dp"
            android:layout_height="38dp"
            android:background="#afadad"
            android:layout_marginLeft="@dimen/margin"
            android:src="@drawable/ic_send_black_24dp" />
    </LinearLayout>

</LinearLayout>